<div id="wrapper">


<div class="registration-cssave">
  <form action="/startpage/login" method="POST">
    <h3 class="text-center">Форма входа</h3>
    <div class="form-group">
      <input class="form-control item" type="text" name="Login" maxlength="25" minlength="4"
        pattern="^[a-zA-Z0-9_.-]*$" id="username" placeholder="Логин" required>
    </div>
    <div class="form-group">
      <input class="form-control item" type="password" name="Password" minlength="1" id="password" placeholder="Пароль"
        required>
    </div>
    <div class="form-group">
      <button class="btn btn-primary btn-block create-account" type="submit">Вход в аккаунт</button>
    </div>
  </form>
  {{#if err}}
  <span class="err">{{err}}</span>
  {{/if}}
</div>
</div>
